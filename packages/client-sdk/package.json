{
  "name": "@auth-gateway/client-sdk",
  "version": "1.0.0",
  "description": "Full-featured TypeScript client SDK for Auth Gateway API",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./grpc": {
      "types": "./dist/grpc/index.d.ts",
      "import": "./dist/grpc/index.mjs",
      "require": "./dist/grpc/index.js"
    },
    "./middleware": {
      "types": "./dist/middleware/index.d.ts",
      "import": "./dist/middleware/index.mjs",
      "require": "./dist/middleware/index.js"
    },
    "./sync": {
      "types": "./dist/sync/index.d.ts",
      "import": "./dist/sync/index.mjs",
      "require": "./dist/sync/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/grpc/index.ts src/middleware/index.ts src/sync/index.ts --format cjs,esm --dts --clean && npm run postbuild",
    "postbuild": "cp src/grpc/auth.proto dist/grpc/auth.proto",
    "dev": "tsup src/index.ts src/grpc/index.ts src/middleware/index.ts src/sync/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "proto-gen": "cd ../../backend && bash scripts/generate-proto.sh",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "auth",
    "authentication",
    "authorization",
    "api-client",
    "typescript",
    "oauth",
    "jwt",
    "grpc",
    "websocket",
    "express",
    "middleware"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@grpc/grpc-js": "^1.10.0",
    "@grpc/proto-loader": "^0.7.10"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "eslint": "^8.56.0",
    "ts-proto": "^2.11.2",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "typescript": ">=4.7.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
