# ===========================================
# Auth Gateway Configuration
# ===========================================
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env file to version control!

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
GRPC_PORT=50051
# gRPC TLS (optional, for production)
GRPC_TLS_ENABLED=false
# GRPC_TLS_CERT_FILE=/path/to/grpc-cert.pem
# GRPC_TLS_KEY_FILE=/path/to/grpc-key.pem
ENV=development
LOG_LEVEL=info

# ===========================================
# Database Configuration
# ===========================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_NAME=auth_gateway
DB_SSLMODE=disable
# DB_MAX_OPEN_CONNS=25
# DB_MAX_IDLE_CONNS=5

# ===========================================
# Redis Configuration
# ===========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# JWT Configuration (CRITICAL - CHANGE IN PRODUCTION!)
# ===========================================
# Secrets MUST be at least 32 characters!
JWT_ACCESS_SECRET=your-super-secret-access-key-min-32-characters
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=168h

# ===========================================
# CORS Configuration
# ===========================================
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With,X-API-Key
CORS_ALLOW_CREDENTIALS=true

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_SIGNUP_MAX=5
RATE_LIMIT_SIGNUP_WINDOW=1h
RATE_LIMIT_SIGNIN_MAX=10
RATE_LIMIT_SIGNIN_WINDOW=15m
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=1m

# ===========================================
# OAuth Providers (Optional)
# ===========================================
# Google OAuth
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
# GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# GitHub OAuth
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/github/callback

# Yandex OAuth
# YANDEX_CLIENT_ID=
# YANDEX_CLIENT_SECRET=
# YANDEX_CALLBACK_URL=http://localhost:3000/api/auth/yandex/callback

# Instagram OAuth
# INSTAGRAM_CLIENT_ID=
# INSTAGRAM_CLIENT_SECRET=
# INSTAGRAM_CALLBACK_URL=http://localhost:3000/api/auth/instagram/callback

# Telegram Bot
# TELEGRAM_BOT_TOKEN=
# TELEGRAM_BOT_USERNAME=

# ===========================================
# SMS Configuration (Optional)
# ===========================================
SMS_ENABLED=false
SMS_PROVIDER=mock
# SMS_PROVIDER=twilio
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM_NUMBER=

# SMS_PROVIDER=aws_sns
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1

# ===========================================
# Email Configuration (Optional)
# ===========================================
# EMAIL_ENABLED=false
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=noreply@example.com

# ===========================================
# Security
# ===========================================
# SECURITY_BCRYPT_COST=10

# ===========================================
# Metrics (Optional)
